<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/View/WriterView.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Книги", "Index", "Book")</li>
                    <li>@Html.ActionLink("Журналы", "Index", "Magazine")</li>
                    <li>@Html.ActionLink("Статьи", "Index", "Article")</li>
                    <li>@Html.ActionLink("Писатели", "Index", "Writer")</li>
                    <li>@Html.ActionLink("Book", "Index", "UserBook")</li>
                    <li>@Html.ActionLink("Writer", "Index", "UserWriter")</li>
                    <li>@Html.ActionLink("Magazine", "Index", "UserMagazine")</li>
                    <li>@Html.ActionLink("Artilce", "Index", "UserArticle")</li>
                    
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="row panel">
       
        <div class="col-xs-6 col-md-offset-3">
            @RenderBody()

            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
